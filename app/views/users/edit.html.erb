<% provide(:title      , 'User edit') %>
<% provide(:url        ,  user_path) %>
<% provide(:button_text, '更新する') %>
<h1>ユーザ情報の更新</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "layouts/form", object: @user %>
    <%= link_to "退会", user_path(@user), method: :delete,
        data: {confirm: "本当に退会してもいいですか？（復元できません）"} %>
  </div>
</div>
